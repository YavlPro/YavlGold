{
  "rewrites": [
    { "source": "/assets/:path*", "destination": "/apps/gold/assets/:path*" },
    { "source": "/dashboard", "destination": "/apps/gold/dashboard/index.html" },

    { "source": "/academia", "destination": "/apps/academia/index.html" },
    { "source": "/academia/", "destination": "/apps/academia/index.html" },
    { "source": "/academia/:path*", "destination": "/apps/academia/:path*" },

    { "source": "/suite", "destination": "/apps/suite/index.html" },
    { "source": "/suite/", "destination": "/apps/suite/index.html" },
    { "source": "/suite/:path*", "destination": "/apps/suite/:path*" },

    { "source": "/", "destination": "/apps/gold/index.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
