# YavlGold - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# ===================================
# SUPABASE CONFIGURATION
# ===================================
# Get these from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=INSERT_YOUR_ANON_KEY_HERE

# Service role key (ONLY for server-side operations, NEVER expose to client)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# HCAPTCHA CONFIGURATION
# ===================================
# Get these from: https://dashboard.hcaptcha.com/

VITE_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key-here
# HCAPTCHA_SECRET_KEY=your-secret-key-here (server-side only)

# ===================================
# APPLICATION SETTINGS
# ===================================

# Production domain
VITE_APP_URL=https://yavlgold.com

# Environment (development, staging, production)
VITE_APP_ENV=production

# API Version
VITE_API_VERSION=v1

# ===================================
# ANALYTICS (Optional)
# ===================================

# Google Analytics
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Plausible Analytics (privacy-friendly alternative)
# VITE_PLAUSIBLE_DOMAIN=yavlgold.com

# ===================================
# THIRD-PARTY INTEGRATIONS
# ===================================

# Telegram Bot Token (if needed)
# TELEGRAM_BOT_TOKEN=your-bot-token

# WhatsApp Business API
# WHATSAPP_PHONE_NUMBER=584247394025

# ===================================
# SECURITY
# ===================================

# Session timeout (in milliseconds)
VITE_SESSION_TIMEOUT=86400000

# Max login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# ===================================
# FEATURE FLAGS
# ===================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHATBOT=false
VITE_ENABLE_NOTIFICATIONS=true

# ===================================
# DEVELOPMENT ONLY
# ===================================

# Debug mode
VITE_DEBUG=false

# Mock API responses
VITE_MOCK_API=false

# ===================================
# NOTES
# ===================================
# - All VITE_ prefixed variables are exposed to the client
# - Never put sensitive keys (like service role keys) in VITE_ variables
# - Server-side only variables should NOT have VITE_ prefix
# - Use different .env files for different environments:
#   .env.local (git-ignored, for local dev)
#   .env.production (for production builds)
#   .env.staging (for staging environment)
